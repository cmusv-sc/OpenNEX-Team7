# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Login page
GET     /login                      controllers.Users.login()
POST    /login                      controllers.Users.authenticate()
GET     /logout                     controllers.Users.logout()
GET     /signup                     controllers.Users.signup()
POST    /signup                     controllers.Users.register()

# Workflow page
GET     /workflows                  controllers.Workflows.index()
GET     /workflows/create           controllers.Workflows.create()
POST    /workflows/create           controllers.Workflows.store()

# Software page
GET     /softwares                  controllers.Softwares.index()
GET     /softwares/create           controllers.Softwares.create()
POST    /softwares/create           controllers.Softwares.store()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar support
GET     /webjars/*file              controllers.WebJarAssets.at(file)